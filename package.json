{
  "name": "@raulfdm/homelab-cli",
  "version": "0.1.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raulfdm/homelab-cli.git"
  },
  "bin": {
    "homelab": "bin/run.js"
  },
  "files": [
    "bin",
    "dist",
    "README.md",
    "templates"
  ],
  "type": "module",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "build": "bun build ./src/cli.ts --target=node --outdir=dist",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "prepare": "husky || true",
    "ci:publish": "bun add -g npm@11.9.0 && bun changeset publish --access public --provenance",
    "ci:version": "bun changeset version && bun run fmt"
  },
  "dependencies": {
    "meow": "14.0.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@types/bun": "latest",
    "husky": "9.1.7",
    "oxfmt": "0.28.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
